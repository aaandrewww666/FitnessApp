<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/authorizationFragment">

    <fragment
        android:id="@+id/authorizationFragment"
        android:name="com.example.fitnessapp.ui.identification.users.fragments.AuthenticationFragment"
        android:label="fragment_authorization"
        tools:layout="@layout/fragment_authorization">
        <action
            android:id="@+id/action_authorizationFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/authorizationFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_authorizationFragment_to_physicalIndexesFragment"
            app:destination="@id/physicalIndexesFragment"
            app:popUpTo="@id/authorizationFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.fitnessapp.ui.identification.users.fragments.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration"/>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.fitnessapp.ui.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main"/>
    <fragment
        android:id="@+id/physicalIndexesFragment"
        android:name="com.example.fitnessapp.ui.fragments.PhysicalIndexesFragment"
        android:label="fragment_physical_indexes"
        tools:layout="@layout/fragment_physical_indexes">
        <action
            android:id="@+id/action_physicalIndexesFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/authorizationFragment"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>