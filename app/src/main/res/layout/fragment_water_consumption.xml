<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@color/app_background"
    tools:context=".fragments.WaterConsumptionFragment">

    <ImageView
        android:id="@+id/water_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/water_ico"
        android:layout_gravity="center_horizontal"/>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:indeterminateDrawable="@drawable/spinner_ring"
        android:indeterminateOnly="true"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/personShouldDrinkTV"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/you_should_be_drinking"
        android:textColor="#73cbea"
        android:textSize="22sp" />

    <LinearLayout
        android:id="@+id/showLitresLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/litresNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="..."
            android:textColor="@color/purple"
            android:textSize="50sp" />
        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/litres"
            android:textColor="@color/purple"
            android:textSize="50sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/ofFluidsTV"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/of_fluids_a_day"
        android:textColor="#73cbea"
        android:textSize="22sp" />

</LinearLayout>