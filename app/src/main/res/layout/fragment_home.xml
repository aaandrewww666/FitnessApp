<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical"
    tools:context=".fragments.HomeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/app_background"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_food"
                android:background="@drawable/shape_for_buttons"
                android:text="@string/food"
                android:src="@drawable/food_ico"

                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="22sp" />
            <ImageButton
                android:id="@+id/button_exercises"
                android:layout_width="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/exercises_ico"
                android:background="@drawable/shape_for_buttons"
                android:text="@string/exercises"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="22sp" />
            <ImageButton
                android:id="@+id/button_BMI"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_for_buttons"
                android:src="@drawable/bmi_ico"
                android:text="@string/bmi"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="22sp" />
            <ImageButton
                android:id="@+id/button_water_consumption"
                android:padding="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_for_buttons"
                android:text="@string/water_consumption"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:src="@drawable/water"
                android:textSize="22sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>